<resources>

    <attr format="reference" name="cardStyle"/>
    <attr format="reference" name="accentColor"/>
    <attr format="reference" name="iconColor"/>
    <attr format="reference" name="windowBackground"/>
    <attr format="reference" name="progressBackgroundColor"/>
    <attr format="reference" name="progressDrawable"/>
    <attr format="reference" name="progressDrawableWithBackground" />
    <attr format="reference" name="stateSelector" />


    <style name="ThemeBaseLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="android:windowBackground">@color/white_50</item>
        <item name="cardStyle">@style/CardViewStyle.Light</item>
        <item name="accentColor">@color/purple_700</item>
        <item name="iconColor">@color/black_800</item>
        <item name="windowBackground">@color/white_50</item>
        <item name="stateSelector">@color/purple_500</item>
        <item name="progressBackgroundColor">@color/white_50</item>
        <item name="progressDrawable">@drawable/progress_drawable</item>
        <item name="progressDrawableWithBackground">@drawable/progress_drawable_withbackground</item>
        <item name="ate_key">light_theme</item>

    </style>
    <style name="ThemeBaseDark" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/green_200</item>
        <item name="android:windowBackground">@color/black_900</item>
        <item name="cardStyle">@style/CardViewStyle.Dark</item>
        <item name="accentColor">@color/green_200</item>
        <item name="iconColor">@color/purple_600</item>
        <item name="windowBackground">@color/black_900</item>
        <item name="stateSelector">@color/purple_600</item>
        <item name="progressBackgroundColor">@color/black_800</item>
        <item name="progressDrawable">@drawable/progress_drawable_dark</item>
        <item name="progressDrawableWithBackground">@drawable/progress_drawable_withbackground_dark</item>
        <item name="ate_key">dark_theme</item>

    </style>



    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="TextApperance.Album.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="TextApperance.Artist.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="TextAppearance.Song.Lyrics" parent="@style/TextAppearance.AppCompat.Medium">
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00666666</item>
    </style>


    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView">
        <item name="cardBackgroundColor">@color/white_50</item>
    </style>

    <style name="CardViewStyle.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/black_800</item>
    </style>



    <style name="CustomCastMiniController" parent="CastMiniController">
        <item name="castShowImageThumbnail">true</item>
        <item name="castTitleTextAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="castSubtitleTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="CustomCastExpandedController" parent="CastExpandedController">
        <item name="castControlButtons">
            @array/cast_expanded_controller_control_buttons
        </item>
    </style>

    <style name="AppTheme.ExpandedCastController" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="castExpandedControllerStyle">@style/CustomCastExpandedController</item>
        <item name="castExpandedControllerToolbarStyle">
            @style/ThemeOverlay.AppCompat.Dark.ActionBar
        </item>
    </style>

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>
</resources>
